<div class="row titleHolder">
	<h1>LLAMA POWER</h1>
</div>

<br /><br />

<div class="row runningLlamaWrapper">
	<div id="sun"></div>
	<div class="runningLlama">
		<div id="lbody"></div>

		<div id="backLegLWrap">
			<div id="backLegL"></div>
		</div>

		<div id="backLegR"></div>

		<div id="frontLegLWrap">
			<div id="frontLegL"></div>
		</div>

		<div id="frontLegR"></div>

