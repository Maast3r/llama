		<div id="hair"></div>
	</div>
</div>

<div class="row spriteHolder">
	<ul id="sprites">
		<li class="why"><%= link_to image_tag("/assets/images/why.png"), why_path %></li>
		<li class="what"><%= link_to image_tag("/assets/images/what.png"), what_path %></li>
		<li class="where"><%= link_to image_tag("/assets/images/where.png"), where_path %></li>
		<li class="how"><%= link_to image_tag("/assets/images/how.png"), how_path %></li>
	</ul>
</div>

